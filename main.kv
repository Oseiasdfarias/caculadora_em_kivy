#:kivy 2.0
<BackgroundColor@Widget>:
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>:
	font_size: 50
    background_color: 0, 0, 0, 0

<CustButton@Button>:
	font_size: self.width/4

<MyBoxLayout>:
	
	orientation: "vertical"
	BackgroundLabel:
		font_size: self.width/10
		text: 'Calculadora Kv'
		background_color: 41, 42, 46, 0.2


	TextInput:
		id: ip
		foreground_color: 58/255, 98/255, 176/255, 0.8
		font_size: self.width/12
		multiline: False
		cursor_blink: True
		cursor_color: 70, 152, 78, 0.8
		padding_x:
            [(self.width-6) - (self._get_text_width((self.text*2), self.tab_width, self._label_cached)) / 2.0, 0]
		padding_y: 
			[self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

	BoxLayout:
		CustButton:
			text:'7'
			on_press: ip.text += self.text

		CustButton:
			text:'8'
			on_press: ip.text += self.text

		CustButton:
			text:'9'
			on_press: ip.text += self.text

		CustButton:
            text: "+"
			on_press: ip.text += self.text

	BoxLayout:
		CustButton:
			text:'4'
			on_press: ip.text += self.text

		CustButton:
			text:'5'
			on_press: ip.text += self.text

		CustButton:
			text:'6'
			on_press: ip.text += self.text

		CustButton:
            text: "-"
			on_press: ip.text += self.text

	BoxLayout:
		CustButton:
			text:'3'
			on_press: ip.text += self.text

		CustButton:
			text:'2'
			on_press: ip.text += self.text

		CustButton:
			text:'1'
			on_press: ip.text += self.text

		CustButton:
            text: "/"
			on_press: ip.text += self.text
			
	BoxLayout:
		CustButton:
            text: "."
			on_press: ip.text += self.text
			
		CustButton:
			text:'0'
			on_press: ip.text += self.text

		CustButton:
            text: "sqrt"
            on_press: ip.text += "sqrt("

		CustButton:
            text: "^"
			on_press: ip.text += "^"			
	BoxLayout:
		CustButton:
            text: "("
			on_press: ip.text += self.text
			
		CustButton:
			text:')'
			on_press: ip.text += self.text

		CustButton:
            text: "cos"
			on_press: ip.text += "cos("

		CustButton:
            text: "x"
			on_press: ip.text += "*"
	BoxLayout:
		CustButton:
            text: "rm"
			on_press: root.remover(ip.text)
            on_release: ip.text = root.calculo
			
		CustButton:
			text:'clear'
			on_press: ip.text = ""

		CustButton:
            text: "sen"
			on_press: ip.text += "sen("

		CustButton:
            text: "="
			on_press: root.calcular(ip.text)
            on_release: ip.text = root.calculo